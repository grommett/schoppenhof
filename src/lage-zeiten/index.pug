    script.
      function initMap() {
        var uluru = {lat: 50.0834, lng: 8.22894999999994};
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 17,
          center: uluru,
          disableDefaultUI: true,
          scrollwheel: false
        });
              
        var icon = {
          url: 'http://dev.schoppenhof-wiesbaden.de/assets/marker.png',
          size: new google.maps.Size(70, 75),
          scaledSize: new google.maps.Size(35, 37.5),
          origin: new google.maps.Point(0,0),
          anchor: new google.maps.Point(17.5,37.5),
          size: new google.maps.Size(70, 100),
          optimized: false
        }

        var marker = new google.maps.Marker({
          position: uluru,
          map: map,
          icon:icon
        });
      }
    script(async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAuLg2bQ4va7q4DdpueNmnhytApEIiqzQk&callback=initMap")